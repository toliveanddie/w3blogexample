<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <h5><span class="glyphicon glyphicon-time"></span><%= post.username %> <%= post.created_at.to_s(:long) %> ago</h5>
  <h5><span class="label label-danger">Rails!</span> <span class="label label-primary">Fun!</span></h5><br>
  <p><%= post.content %></p>
  <hr>
<% end %>
