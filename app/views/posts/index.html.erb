<div class="col-sm-9">

<h4><small>Most recent Posts towards the top</small></h4>

<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <h4><span class="glyphicon glyphicon-time"></span><%= post.username %>  <small><%= time_ago_in_words(post.created_at) %> ago</small></h4>
  <h5><span class="label label-danger">Rails!</span> <span class="label label-primary">Fun!</span></h5>
  <p class="pcontent"><%= post.content %></p>
  <hr>
<% end %>

</div>
