<div class="col-sm-9">
  <h4><small>Most recent Posts towards the top</small></h4>
  <hr>
  <% @posts.each do |post| %>
    <h2><%= post.title %></h2>
    <h5><span class="glyphicon glyphicon-time"></span><%= post.username %> <%= time_ago_in_words(post.created_at) %> ago</h5>
    <h5><span class="label label-danger">Rails!</span> <span class="label label-primary">Fun!</span></h5><br>
    <p><%= post.content %></p>
    <br><br>
    <hr>
  <% end %>

  <h4>Leave a Comment:</h4>
  <form role="form">
    <div class="form-group">
      <textarea class="form-control" rows="3" required></textarea>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
  <br><br>

  <p><span class="badge">2</span> Comments:</p><br>

